{
  "include": [
    "lib/*",
    "lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "config",
    "dist",
    "jest",
    "*.js",
  ],
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declaration": true,
    "baseUrl": ".",
    "rootDir": ".",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "@": [
        "lib/"
      ],
      "@/*": [
        "lib/*"
      ]
    }
  }
}
